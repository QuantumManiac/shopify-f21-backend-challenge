{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "strongloop",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "strict": 0,
        "indent": ["error", 4, {"SwitchCase": 1}],
        "max-len": ["error", 170, 2, {
            "ignoreUrls": true,
            "ignoreComments": true,
            "ignoreRegExpLiterals": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true
        }],
        "no-throw-literal": 0
    }
}